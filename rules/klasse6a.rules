rule "Gymto - Nachricht Klasse 6A"
when
        Item gymto_klasse6a received update
then
    if (gymto_klasse6a.state.toString() == "Keine Vertretung") {
        gymto_klasse6a_short.postUpdate("Keine Vertretungen")
        gymto_klasse6a_notifier.postUpdate("OFF")
    } else {
        gymto_klasse6a_short.postUpdate("Morgen Vertretungen")
        gymto_klasse6a_notifier.postUpdate("ON")
    }
    if (gymto_klasse6a.state != gymto_klasse5a_old.state) {
        if ((notifier_gymto.state == ON) && (gymto_klasse6a.state.toString() != "Keine Vertretung")) {
            sendTelegram("klasse6a",gymto_klasse6a.state.toString)
            gymto_klasse6a_sent.postUpdate(new DateTimeType())
        }
    }
    gymto_klasse6a_old.postUpdate(gymto_klasse6a.state)
end
