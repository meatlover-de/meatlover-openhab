import org.joda.time.*

rule "Zeitschaltung Internet - Freischaltung"
when
    //         sec min hr  dom mon dow yr
    Time cron "0 * * * * ?"
then
    var dayofweek = now.getDayOfWeek()
    var freischalten = 0
    var blockieren = 0

    if (GlobalHoliday.state == ON) {
        // Es sind Ferien
        freischalten = 8
        blockieren = 23
    } else {
        if (dayofweek < 5) {     // MO-DO
            freischalten = 17
            blockieren = 21
        }
        if (dayofweek == 5) {     // FR
            freischalten = 14
            blockieren = 22
        }
        if (dayofweek == 6) {     // SA
            freischalten = 8
            blockieren = 22
        }
        if (dayofweek == 7) {     // SO
            freischalten = 8
            blockieren = 21
        }
    }
    internet_startzeit.postUpdate(freischalten)
    internet_endzeit.postUpdate(blockieren)
    if (now.getHourOfDay() >= freischalten && now.getHourOfDay() < blockieren) {
        if (svenja_internet_access_timed.state == ON) {
            if (svenja_internet_access.state == OFF) {
                svenja_internet_access.sendCommand("ON")
                logInfo("network_access.rules", "Network access for Svenja granted")
            }
        }
        if (jule_internet_access_timed.state == ON) {
            if (jule_internet_access.state == OFF) {
                jule_internet_access.sendCommand("ON")
                logInfo("network_access.rules", "Network access for Jule granted")
            }
        }
    } else {
        if (svenja_internet_access_timed.state == ON) {
            if (svenja_internet_access.state == ON) {
                svenja_internet_access.sendCommand("OFF")
                logInfo("network_access.rules", "Network access for Svenja removed")
            }
        }
        if (jule_internet_access_timed.state == ON) {
            if (jule_internet_access.state == ON) {
                jule_internet_access.sendCommand("OFF")
                logInfo("network_access.rules", "Network access for Jule removed")
            }
        }
    }
end


rule "Svenja: Block internet access"
when
Item svenja_internet_access changed
then
if ( svenja_internet_access.state == OFF) {
        executeCommandLine("/usr/local/bin/block_unifi.sh 70:3e:ac:29:2d:d9",30)         // Flauschi
        executeCommandLine("/usr/local/bin/block_unifi.sh 9c:04:eb:bc:21:ec",30)         // iPad
        executeCommandLine("/usr/local/bin/block_unifi.sh 00:24:8c:4c:f8:5f",30)         // PC
        logInfo("network_access.rules", "Svenja wurde geblockt.")
//        sendTelegram("bot1", "Svenja wurde geblockt.")
} else {
        executeCommandLine("/usr/local/bin/unblock_unifi.sh 70:3e:ac:29:2d:d9",30)         // Flauschi
        executeCommandLine("/usr/local/bin/unblock_unifi.sh 9c:04:eb:bc:21:ec",30)         // iPad
        executeCommandLine("/usr/local/bin/unblock_unifi.sh 00:24:8c:4c:f8:5f",30)         // PC
        logInfo("network_access.rules", "Svenja wurde freigeschaltet.")
//        sendTelegram("bot1", "Svenja wurde freigeschaltet.")
}
end

