rule "doors"
when
    Member of gDoorStatus changed
then
    val door = triggeringItem 
    var String Name = door.name
    var String State = "unknown"
    if (door.state == OPEN) {
        State = "opened"
    } else {
        State = "closed"
    }
    var String Message = String::format( "%1$tY-%1$tm-%1$td %1$tH:%1$tM:%1$tS", new java.util.Date )
    executeCommandLine("/bin/sh@@-c@@echo '" + Message + ": " + Name + " " + State + "' >> /etc/openhab2/logs/doors.txt", 5000)
end
