val String filename = "astro.rules"

rule "Update Night_State"
when
    Time cron "0 * * * * ?"
then
    if (Sun_Elevation.state > 0.0) {
        if (Night_State.state != OFF) Night_State.postUpdate(OFF)
    } else {
        if (Night_State.state != ON) Night_State.postUpdate(ON)
    }
end

